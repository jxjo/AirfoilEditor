{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true,
            "cwd": "${fileDirname}",
            "env": { "PYTHONPATH": "${fileDirname}/.." }  // to start modules and find 'base' subDir
        }
    ]
}